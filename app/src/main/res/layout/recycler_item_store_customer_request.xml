<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_recycler_layout"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginVertical="10dp"
        >

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/ivImageProduct"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:tint="@android:color/holo_blue_light"
            android:src="@drawable/baseline_image_24"

            app:layout_constraintStart_toStartOf="parent"  />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingStart="45dp"
            android:paddingEnd="10dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStyleDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Style Description"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Style: 012D84d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStyleDescription" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvColorSize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Color: WHITE Size: S"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStyle" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUPC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPC: 2020123121212"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvQty" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="0 / 100"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/ivAction"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/ivAction"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_action_more_option_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
