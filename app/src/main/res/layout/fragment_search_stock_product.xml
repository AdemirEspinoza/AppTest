                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tvEstilo_subtitle"
                style="@style/TextBlackPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEstilo" />
            <TextView
                android:id="@+id/tvDesc"
                style="@style/TextGrayPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEstilo_subtitle" />
            <TextView
                android:id="@+id/tvDesc_subtitle"
                style="@style/TextBlackPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc" />
            <TextView
                android:id="@+id/tvDepartamento"
