                android:paddingVertical="2dp"
                android:text="0"
                app:layout_constraintEnd_toEndOf="@+id/tvTotal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDesc" />
            <TextView
