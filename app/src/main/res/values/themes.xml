<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.POSRetailCS" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/pos_primary</item>
        <item name="colorPrimary">@color/pos_analogous1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pos_secondary</item>
        <item name="colorSecondaryVariant">@color/pos_analogous2</item>
        <item name="colorOnSecondary">@color/pos_analogous2</item>

        <!--        <item name="fontFamily">@font/leaguespartan_regular</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="background">@color/white</item>
    </style>

    <style name="Theme.AppTest" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="titleEnabled">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:background">@color/white</item>

    </style>

</resources>